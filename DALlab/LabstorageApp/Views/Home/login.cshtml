@model DALlab.detail
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header>
    
    <h1 style=" color:aliceblue; text-align:center">
      
       <span> DESE LAB RECORDS</span>
    </h1>
    <h3 style="text-align:left; color:aliceblue;">WELCOME</h3>
</header>



<div class="form-horizontal">
    <hr />

    <div class="form-group">
        <div class="col-md-offset-1  col-md-10">
            <label style="color:aliceblue">LOGIN</label>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="form-group" style="color:aliceblue">
            @Html.LabelFor(model => model.username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group" style="color:aliceblue">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
       

        @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    New user? @Html.ActionLink("Register here", "Registeruser")
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SUBMIT" class="btn-group" style="color:aliceblue; background-color:black" />
            </div>
        </div>
    }
</div>









